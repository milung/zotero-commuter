<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.mung.sentience.zoterosentience"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="sk.mung.sentience.zoterosentience.GlobalState">
        <activity
            android:name="sk.mung.sentience.zoterosentience.LibraryItemListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sk.mung.sentience.zoterosentience.LibraryItemDetailActivity"
            android:label="@string/title_libraryitem_detail"
            android:parentActivityName=".LibraryItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LibraryItemListActivity" />
        </activity>
        <activity
            android:name="sk.mung.sentience.zoterosentience.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="sk.mung.sentience.zoterosentience.LibraryItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sk.mung.sentience.zoterosentience.LibraryItemListActivity" />
        </activity>
    </application>

</manifest>